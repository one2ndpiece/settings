// 既定値を上書きするには、このファイル内にキー バインドを挿入します
[
    {
        "key": "ctrl+j",
        "command": "-workbench.action.togglePanel"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.toggleMaximizedPanel"
    },
    {
        "key": "ctrl+shift+k",
        "command": "-mermaidChart.showCompletions",
        "when": "editorLangId =~ /^mermaid/"
    },
    {
        "key": "ctrl+enter",
        "command": "workbench.action.chat.submit",
        "when": "inChatInput && chatMode == 'ask'"
    },
    {
        "key": "enter",
        "command": "-workbench.action.chat.submit",
        "when": "inChatInput && chatMode == 'ask'"
    },
    {
        "key": "ctrl+enter",
        "command": "-workbench.action.chat.submitWithCodebase",
        "when": "chatInputHasText && chatRequestIsPaused && inChatInput || chatInputHasText && inChatInput && !chatSessionRequestInProgress || chatPromptFileAttached && chatRequestIsPaused && inChatInput || chatPromptFileAttached && inChatInput && !chatSessionRequestInProgress"
    },
    {
        "key": "ctrl+enter",
        "command": "workbench.action.edits.submit",
        "when": "inChatInput && chatMode != 'ask'"
    },
    {
        "key": "enter",
        "command": "-workbench.action.edits.submit",
        "when": "inChatInput && chatMode != 'ask'"
    },
    {
        "key": "ctrl+enter",
        "command": "workbench.action.chat.submit",
        "when": "inChatInput"
    },
    {
        "key": "enter",
        "command": "-workbench.action.chat.submit",
        "when": "inChatInput"
    },
    {
        "key": "ctrl+u",
        "command": "-cursorUndo",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+enter",
        "command": "workbench.action.chat.submit",
        "when": "inChatInput && !withinEditSessionDiff"
    },
    {
        "key": "enter",
        "command": "-workbench.action.chat.submit",
        "when": "inChatInput && !withinEditSessionDiff"
    }
]