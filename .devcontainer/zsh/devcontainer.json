{
	"name": "joor",
	// dockerイメージ
	"build": {
		"context": ".",
		"dockerfile": "Dockerfile"
	},
	"workspaceMount": "source=${localWorkspaceFolder},target=${localWorkspaceFolder},type=bind,consistency=cached",
	"workspaceFolder": "${localWorkspaceFolder}",
	"mounts": [
		{
			"source": "SOURCE_DIR",
			"target": "TARGET_DIR",
			"type": "bind"
		}
	],
	"remoteUser": "root",
	"customizations": {
		"vscode": {
			"settings": {
				"workbench.colorCustomizations": {
					"titleBar.activeBackground": "#19549C",
					"titleBar.activeForeground": "#ffffff",
					"activityBar.background": "#02A7E3",
					"activityBar.foreground": "#ffffff"
				},
				"editor.formatOnType": true,
				"editor.formatOnSave": true,
				"editor.guides.bracketPairs": true,
				"markdown.preview.scrollPreviewWithEditor": false,
				"markdown.preview.scrollEditorWithPreview": false,
				"todo-tree.general.tags": [
					"BUG",
					"HACK",
					"FIXME",
					"TODO",
					"LOG",
					"[ ]",
					"[x]",
					"MEMO"
				],
				"[prisma]": {
					"editor.defaultFormatter": "Prisma.prisma"
				},
				"[jsonc]": {
					"editor.defaultFormatter": "vscode.json-language-features"
				},
				"editor.codeActionsOnSave": {
					"source.fixAll.eslint": "explicit",
					"source.organizeImports": "explicit"
				},
				"eslint.workingDirectories": [
					{
						"mode": "auto"
					}
				],
				"[javascript]": {
					"editor.defaultFormatter": "esbenp.prettier-vscode"
				},
				"[typescript]": {
					"editor.defaultFormatter": "esbenp.prettier-vscode",
					"editor.formatOnType": true
				},
				"prettier.tabWidth": 4,
				"tailwindCSS.experimental.classRegex": [
					[
						"([\"'`][^\"'`]*.*?[\"'`])",
						"[\"'`]([^\"'`]*).*?[\"'`]"
					]
				],
				"python.terminal.activateEnvironment": false,
				"window.commandCenter": 1,
				"workbench.iconTheme": "vscode-icons",
				"[python]": {
					"editor.formatOnType": true
				},
				"[json]": {
					"editor.quickSuggestions": {
						"strings": true
					},
					"editor.suggest.insertMode": "replace",
					"editor.defaultFormatter": "vscode.json-language-features"
				},
				"cursor.cmdk.autoSelect": false,
				"cursor.chat.terminalShowHoverHint": false,
				"remote.autoForwardPortsSource": "hybrid",
				"cursor.cpp.disabledLanguages": [],
				"cursor.chat.narrowScrollbar": false,
				"extensions.experimental.affinity": {
					"asvetliakov.vscode-neovim": 1
				},
				"hediet.vscode-drawio.resizeImages": null,
				"diffEditor.ignoreTrimWhitespace": false,
				"vsicons.dontShowNewVersionMessage": true,
				"workbench.colorTheme": "Solarized Light",
				"playwright.reuseBrowser": false,
				"playwright.showTrace": false,
				"[typescriptreact]": {
					"editor.defaultFormatter": "esbenp.prettier-vscode"
				},
				"[css]": {
					"editor.defaultFormatter": "esbenp.prettier-vscode"
				},
				"hexeditor.columnWidth": 16,
				"hexeditor.showDecodedText": true,
				"hexeditor.defaultEndianness": "little",
				"hexeditor.inspectorType": "aside",
				"typescript.updateImportsOnFileMove.enabled": "always",
				"[markdown]": {
					"editor.defaultFormatter": "yzhang.markdown-all-in-one"
				},
				"terminal.integrated.defaultProfile.linux": "zsh"
			},
			"extensions": [
				"amazonwebservices.aws-toolkit-vscode",
				"bierner.markdown-mermaid",
				"charliermarsh.ruff",
				"eamodio.gitlens",
				"grapecity.gc-excelviewer",
				"gruntfuggly.todo-tree",
				"janisdd.vscode-edit-csv",
				"mechatroner.rainbow-csv",
				"mhutchie.git-graph",
				"mosapride.zenkaku",
				"ms-azuretools.vscode-docker",
				"ms-ceintl.vscode-language-pack-ja",
				"ms-vscode-remote.remote-containers",
				"ms-vscode-remote.remote-ssh-edit",
				"ms-vscode-remote.remote-wsl",
				"ms-vscode-remote.vscode-remote-extensionpack",
				"ms-vscode.hexeditor",
				"ms-vscode.live-server",
				"ms-vsliveshare.vsliveshare",
				"oderwat.indent-rainbow",
				"romanpeshkov.vscode-text-tables",
				"vscode-icons-team.vscode-icons",
				"xshrim.txt-syntax",
				"yzane.markdown-pdf",
				"yzhang.markdown-all-in-one",
				"bradlc.vscode-tailwindcss",
				"christian-kohler.path-intellisense",
				"dsznajder.es7-react-js-snippets",
				"Prisma.prisma",
				"hediet.vscode-drawio",
				"usernamehw.errorlens",
				"corschenzi.mermaid-graphical-editor",
				"esbenp.prettier-vscode",
				"dbaeumer.vscode-eslint",
				"redhat.vscode-yaml",
				"MylesMurphy.prettify-ts",
				"ms-playwright.playwright",
				"ms-toolsai.jupyter"
			]
		}
	},
	"features": {
		"ghcr.io/devcontainers/features/docker-from-docker:1": {},
		"ghcr.io/devcontainers/features/github-cli:1": {},
		"ghcr.io/devcontainers/features/aws-cli:1": {}
	},
	"runArgs": [
		"--add-host=host.docker.internal:host-gateway"
	]
}