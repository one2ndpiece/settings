{
  "name": "full",
  // dockerイメージ
  "build": {
    "context": ".",
    "dockerfile": "Dockerfile"
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=${localWorkspaceFolder},type=bind,consistency=cached",
  "workspaceFolder": "${localWorkspaceFolder}",
  "mounts": [
    {
      "source": "SOURCE_DIR",
      "target": "TARGET_DIR",
      "type": "bind"
    }
  ],
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "settings": {
        "workbench.colorCustomizations": {
          "titleBar.activeBackground": "#19549C",
          "titleBar.activeForeground": "#ffffff",
          "activityBar.background": "#02A7E3",
          "activityBar.foreground": "#ffffff"
        },
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.formatOnType": true
        },
        "editor.formatOnType": true,
        "editor.formatOnSave": true,
        "python.analysis.typeCheckingMode": "strict",
        "python.analysis.autoImportCompletions": true,
        "ruff.interpreter": [
          "/bin/python3"
        ],
        "editor.codeActionsOnSave": {
          "source.fixAll.ruff": "explicit"
        },
        "mypy-type-checker.importStrategy": "fromEnvironment",
        "mypy-type-checker.path": [
          "[\"uv\",\"tool\",\"run\",\"mypy\"]"
        ],
        "evenBetterToml.formatter.columnWidth": 1,
        "evenBetterToml.formatter.arrayAutoCollapse": true,
        "github.copilot.chat.commitMessageGeneration.instructions": [
          {
            "text": "日本語で頼む。簡潔に書いて欲しいが、変更点は漏らさず書いて欲しい。箇条書きスタイルで書いてください。最初の一行はfeatureの追加やバグ修正の概要を書いてください。"
          }
        ],
        "todo-tree.general.tags": [
          "BUG",
          "HACK",
          "FIXME",
          "TODO",
          "XXX",
          "[ ]",
          "[x]",
          "BM:"
        ],
        "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|'|%%|^|^[ \\t]*(-|\\d+.))\\s*($TAGS)"
      },
      "extensions": [
        "amazonwebservices.aws-toolkit-vscode",
        "MermaidChart.vscode-mermaid-chart",
        "charliermarsh.ruff",
        "grapecity.gc-excelviewer",
        "gruntfuggly.todo-tree",
        "janisdd.vscode-edit-csv",
        "marp-team.marp-vscode",
        "mechatroner.rainbow-csv",
        "mhutchie.git-graph",
        "mosapride.zenkaku",
        "ms-azuretools.vscode-docker",
        "ms-ceintl.vscode-language-pack-ja",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "ms-toolsai.vscode-jupyter-slideshow",
        "ms-vscode-remote.remote-containers",
        "ms-vscode-remote.remote-ssh-edit",
        "ms-vscode-remote.remote-wsl",
        "ms-vscode-remote.vscode-remote-extensionpack",
        "ms-vscode.hexeditor",
        "ms-vscode.live-server",
        "ms-vsliveshare.vsliveshare",
        "oderwat.indent-rainbow",
        "romanpeshkov.vscode-text-tables",
        "tomoki1207.pdf",
        "vscode-icons-team.vscode-icons",
        "xshrim.txt-syntax",
        "yzane.markdown-pdf",
        "yzhang.markdown-all-in-one",
        "bradlc.vscode-tailwindcss"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-from-docker:1": {}
  },
  "runArgs": [
    "--add-host=host.docker.internal:host-gateway"
  ]
}