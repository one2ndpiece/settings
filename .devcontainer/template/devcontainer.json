{
  "name": "template",
  // dockerイメージ
  "build": {
    "context": ".",
    "dockerfile": "Dockerfile"
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=${localWorkspaceFolder},type=bind,consistency=cached",
  "workspaceFolder": "${localWorkspaceFolder}",
  "mounts": [
    {
      "source": "SOURCE_DIR",
      "target": "TARGET_DIR",
      "type": "bind"
    }
  ],
  "remoteUser": "root",
  "customizations": {
    "vscode": {
      "settings": {
        // 細かい設定は.vscode/settings.jsonに記載
        "workbench.colorCustomizations": {
          "titleBar.activeBackground": "#19549C",
          "titleBar.activeForeground": "#ffffff",
          "activityBar.background": "#02A7E3",
          "activityBar.foreground": "#ffffff"
        }
      },
      // .vscode/extensions.jsonに書いた方がいいかも？
      "extensions": [
        "christian-kohler.path-intellisense",
        "MermaidChart.vscode-mermaid-chart",
        "grapecity.gc-excelviewer",
        "gruntfuggly.todo-tree",
        "janisdd.vscode-edit-csv",
        "mechatroner.rainbow-csv",
        "mhutchie.git-graph",
        "mosapride.zenkaku",
        "ms-azuretools.vscode-docker",
        "ms-ceintl.vscode-language-pack-ja",
        "ms-vscode-remote.remote-containers",
        "ms-vscode-remote.remote-ssh-edit",
        "ms-vscode-remote.remote-wsl",
        "ms-vscode-remote.vscode-remote-extensionpack",
        "ms-vscode.hexeditor",
        "oderwat.indent-rainbow",
        "romanpeshkov.vscode-text-tables",
        "vscode-icons-team.vscode-icons",
        "xshrim.txt-syntax",
        "yzane.markdown-pdf",
        "yzhang.markdown-all-in-one",
        "redhat.vscode-xml",
        "tamasfe.even-better-toml",
        "redhat.vscode-yaml"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-from-docker:1": {},
    "ghcr.io/devcontainers/features/aws-cli:1": {},
    "ghcr.io/devcontainers-extra/features/uv:1": {},
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/java:1": {},
    "ghcr.io/devcontainers/features/ruby:1": {},
    "ghcr.io/devcontainers/features/dotnet:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "runArgs": [
    "--add-host=host.docker.internal:host-gateway"
  ],
  "postCreateCommand": "bash -lc 'set -e;cp -r /OneDrive/.ssh /root && chmod 600 /root/.ssh/id_*' && npm i -g rust-just"
}